{% style %}
  .jumbotron {
    padding: 5rem;
    text-align: center;
  }

  .jumbotron > h1 {
    margin-top: 1.5rem;
    margin-bottom: 0;
    text-align: center;
    text-transform: uppercase;
    font-weight: 700;
    font-size: 36px;
    color: #004289;
  }

  .jumbotron > p {
    text-align: center;
    font-size: 16px;
    font-weight: bold;
    color: #004289;
    width: 75%;
    display: inline-block;
    margin-top: 1rem;
    line-height: 3.1rem;
  }

  @media screen and (max-width: 749px) {
    .jumbotron {
      padding: 2rem;
      line-height: 20px;
    }
  }
{% endstyle %}

<div class="jumbotron page-width">
  <h1>{{ section.settings.head_text }}</h1>
  <p>{{ section.settings.body_text }}</p>
</div>

{% schema %}
{
  "name": "Product Jumbotron",
  "tag": "section",
  "class": "section-jumbotron",
  "settings": [
    {
      "type": "text",
      "id": "head_text",
      "label": "Head Text",
      "default": "tops & Jackets"
    },
    {
      "type": "text",
      "id": "body_text",
      "label": "Text",
      "default": "Praesent commodo cursus magna, vel scelerisque nisl consectetur et. Sed posuere consectetur est at lobortis. Vivamus sagittis lacus vel augue laoreet rutrum faucibus dolor auctor. Maecenas faucibus mollis interdum. Fusce dapibus, tellus ac cursus commodo, tortor mauris condimentum nibh, ut fermentum massa justo sit amet risus. Cras justo odio, dapibus ac facilisis in, egestas eget quam. Nullam id dolor id nibh ultricies vehicula ut id elit."
    }
  ],
  "presets": [
    {
      "name": "Product Jumbotron"
    }
  ]
}
{% endschema %}
