{%- style -%}
  .image-text-container {
    position: relative;
    background-image: url("{{ section.settings.image | img_url: 'master' }}");
    background-size: cover;
    height: 315px;
  }

  .container-head-text {
    margin: 0;
    text-transform: uppercase;
    font-size: 36px;
    font-weight: 700;
    color: {{ section.settings.head_color }};
    background-color: #fff;
  }

  .container-body-text {
    margin: 0;
    font-weight: 400;
    font-size: 16px;
    color: #333333;
    background-color: #fff;
  }

  .sign-form {
    text-align: left;
  }

  .form-input {
    padding: 15px;
    font-size: 16px;
    width: 49%;
    background-color: #f5f6f4;
    border: 1px solid #f5f5f5;
  }

  .form-input:focus {
    border: 1px solid #f5f5f5;
  }

  .form-group {
    display: flex;
    justify-content: space-between;
    width: 610px;
  }

  .form-label {
    color: #004289;
    font-size: 14px;
    font-weight: bold;
  }

  .form-submit {
    width: 49%;
    background-color: #004289;
    color: white;
    text-transform: uppercase;
    border-style: none;
    font-size: 16px;
    font-weight: bold;
    letter-spacing: 1px;
  }

  .inline-box {
    background-color: white;
    width: fit-content;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    padding: 40px;
    text-align: center;
  }

  @media screen and (min-width: 750px) and (max-width: 989px) {
    .card__description {
      display: none;
    }

    .inline-box {
      width: 70%;
    }

    .form-group {
      width: 100%;
    }
  }

  @media screen and (max-width: 749px) {
    .card__description {
      display: none;
    }

    .inline-box {
      width: 70%;
    }

    .form-group {
      display: block;
      width: 100%;
    }

    .form-group > input {
      display: block;
      padding: 15px 0;
      width: 95%;
      margin-top: 10px;
    }

    .container-head-text {
      font-size: 26px;
    }

    .form-input {
      padding: 6px;
    }

    .container-body-text {
      line-height: 20px;
      margin: 7px 0;
    }
  }
{%- endstyle -%}

<div class="image-text-container">
  <div class="inline-box">
    <h1 class="container-head-text color-{{ section.settings.color_scheme }}">{{ section.settings.head_text }}</h1>
    <p class="container-body-text color-{{ section.settings.color_scheme }}">{{ section.settings.body_text }}</p>
    <form class="sign-form">
      <label class="form-label">Email Address</label>
      <div class="form-group">
        <input type="email" class="form-input">
        <input type="submit" class="form-submit" value="{{ section.settings.btn_text }}">
      </div>
    </form>
  </div>
</div>

{% schema %}
{
  "name": "news-letter",
  "tag": "section",
  "class": "section-news",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "head_text",
      "label": "Heading Text",
      "default": "join our Newsletter"
    },
    {
      "type": "color",
      "id": "head_color",
      "label": "Head Text Color",
      "default": "#333333"
    },
    {
      "type": "text",
      "id": "body_text",
      "label": "Text",
      "default": "Be the first to know about our offers, events &  new arrivals"
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Button Text",
      "default": "Sign Up"
    },
    {
      "type": "color",
      "id": "btn_color",
      "label": "Button Color",
      "default": "#004289"
    }
  ],
  "presets": [
    {
      "name": "News letter"
    }
  ]
}
{% endschema %}
