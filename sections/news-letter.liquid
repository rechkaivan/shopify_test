{%- style -%}
  .image-text-container {
    margin-top: 20px;
    position: relative;
    background-image: url("{{ section.settings.image | img_url: 'master' }}");
    background-size: cover;
    height: 330px;
  }
  .container-head-text {
    margin: 0;
    text-transform: uppercase;
    font-size: 36px;
    font-weight: 700;
    color: #333333;
  }
  .container-body-text {
    font-weight: 400;
    font-size: 16px;
    color: #333333;
  }
  .sign-form {
    text-align: left;
  }
  .form-input {
    padding: 20px;
    font-size: 16px;
    width: 50%;
    background-color: #f5f6f4;
    border: 1px solid #f5f5f5;
  }
  .form-input:focus {
    border: 1px solid #f5f5f5;
  }
  .form-group {
    display: flex;
    justify-content: space-between;
    width: 750px;
  }
  .form-label {
    color: #004289;
    font-size: 14px;
    font-weight: bold;
  }
  .form-submit {
    width: 45%;
    background-color: #004289;
    color: white;
    text-transform: uppercase;
    border-style: none;
  }
  .inline-box {
    background-color: white;
    width: fit-content;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    padding: 20px;
    text-align: center;
  }
{%- endstyle -%}

<div class="image-text-container">
  <div class="inline-box">
    <h1 class="container-head-text">{{ section.settings.head_text }}</h1>
    <p class="container-body-text">{{ section.settings.body_text }}</p>
    <form class="sign-form">
      <label class="form-label">Email Address</label>
      <div class="form-group">
        <input type="email" class="form-input">
        <input type="submit" class="form-submit" value="{{ section.settings.btn_text }}">
      </div>
    </form>
  </div>
</div>

{% schema %}
{
  "name": "news-letter",
  "tag": "section",
  "class": "section-news",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "head_text",
      "label": "Heading Text",
      "default": "join our Newsletter"
    },
    {
      "type": "text",
      "id": "body_text",
      "label": "Text",
      "default": "Be the first to know about our offers, events &  new arrivals"
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Button Text",
      "default": "Sign Up"
    },
    {
      "type": "color",
      "id": "btn_color",
      "label": "Button Color",
      "default": "#004289"
    }
  ],
  "presets": [
    {
      "name": "News letter"
    }
  ]
}
{% endschema %}
