{%- style -%}
  .hero-image {
    position: relative;
    flex: 50%;
  }

  .hero-text {
    position: absolute;
    width: 61%;
    text-align: center;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: white;
    font-weight: bold;
    z-index: 10;
  }

  .hero-image::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    background: #000000;
    opacity: 0.5;
    z-index: 1;
    width: 100%;
    height: 100%;
  }

  .hero-text > h1,
  .hero-text > p {
    color: white;
    z-index: 10;
  }

  .hero-text > h1 {
    text-transform: uppercase;
    font-weight: bold;
    font-size: 66px;
    margin: 0;
    line-height: 66px;
    letter-spacing: 3px;
  }

  .jumbotron {
    position: relative;
    flex: 50%;
  }

  .jumbotron-head {
    margin: 0;
    color: white;
    font-weight: bold;
    text-transform: uppercase;
  }

  .jumbotron-head > p {
    margin: 0;
    font-size: 30px;
  }

  .jumbotron-body {
    margin: 0;
    color: white;
  }

  .jumbotron-body > p {
    margin-top: 1.1rem;
    margin-bottom: 2.3rem;
    font-size: 16px !important;
    line-height: 23px;
  }

  .container-wrapper {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -51%);
    width: 80%;
  }

  .btn-primary {
    padding: 0px 4rem;
    color: white;
    background-color: rgba(0, 0, 0, 0);
    border: solid 2px white;
    text-transform: uppercase;
    cursor: pointer;
  }

  .banner-container {
    display: flex;
    justify-content: flex-start;
    padding-right: 15px;
  }

  .img-banner > .banner-container:first-child {
    padding-bottom: 15px;
  }

  .banner-img-container {
    flex: 50%;
  }

  .banner-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .container {
    display: flex;
    padding: 0;
  }

  .img-banner {
    flex: 50%;
  }

  .background-img > img,
  .background-img > svg {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  .btn-primary > p {
    font-size: 12px;
  }

  @media screen and (min-width: 1400px) {
    .hero-text > h1 {
      font-size: 66px;
    }

    .jumbotron-head > p {
      font-size: 20px;
    }

    .btn-primary > p {
      font-size: 10px;
    }
  }

  @media screen and (min-width: 1080px) {
  }

  @media screen and (min-width: 750px) and (max-width: 989px) {
    .jumbotron-head > p {
      font-size: 45px;
    }

    .jumbotron-body > p {
      font-size: 20px;
    }

    .btn-primary > p {
      font-size: 16px;
    }

    .banner-container {
      padding-right: 0;
    }

    .container {
      display: block;
    }

    .hero-image {
      height: 500px;
      margin-top: 15px;
    }

    .hero-text > h1 {
      font-size: 70px;
    }
  }

  @media screen and (max-width: 749px) {
    .jumbotron-head > p {
      font-size: 20px;
    }

    .jumbotron-body > p {
      font-size: 10px;
      line-height: 10px;
      margin-bottom: 1rem;
    }

    .btn-primary {
      padding: 0.5rem;
    }

    .btn-primary > p {
      font-size: 10px;
      margin: 0;
    }

    .banner-container {
      padding-right: 0;
    }

    .container {
      display: block;
    }

    .hero-image {
      height: 330px;
      margin-top: 15px;
    }

    .hero-text > h1 {
      font-size: 30px;
      line-height: 36px;
    }
  }

  @media screen and (min-width: 400px) {
    .jumbotron-head > p {
      font-size: 25px;
    }

    .jumbotron-body > p {
      font-size: 14px;
      line-height: 14px;
    }
  }

  @media screen and (min-width: 600px) {
    .jumbotron-head > p {
      font-size: 35px;
    }

    .jumbotron-body > p {
      font-size: 16px;
      line-height: 18px;
    }

    .btn-primary > p {
      font-size: 12px;
    }
  }

  @media screen and (min-width: 990px) {
    .jumbotron-head > p {
      font-size: 30px;
    }

    .jumbotron-body > p {
      font-size: 13px;
    }
  }
{%- endstyle -%}

