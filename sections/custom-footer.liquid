      "id": "text_link",
      "label": "Text Link"
    },
    {
      "type": "image_picker",
      "id": "company_logo",
      "label": "Company Logo"
    }
  ],
  "blocks": [
    {
      "type": "info",
      "name": "Info",
      "settings": [
        {
          "type": "text",
          "id": "heading_text",
          "label": "Heading Text",
          "default": "Info"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu"
        }
      ]
    },
    {
      "type": "contact",
      "name": "Contact",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading text",
          "default": "Contact"
        },
        {
          "type": "text",
          "id": "tel",
          "label": "Telephone",
          "default": "012 3456789"
        },
        {
          "type": "text",
          "id": "email",
          "label": "Email",
          "default": "hello@domain.com"
        },
        {
          "type": "text",
          "id": "company_info",
          "label": "Company info",
          "default": "Lorem Ipsum Outdoor "
        },
        {
          "type": "text",
          "id": "name",
          "label": "Name",
          "default": "Unit 1, Lipsum,"
        },
        {
          "type": "text",
          "id": "country",
          "label": "Country",
          "default": "City, Co. County"
        },
        {
          "type": "checkbox",
          "id": "manage_social",
          "label": "Manage Social networks",
          "default": true
        }
      ]
    },
    {
      "type": "join_us",
      "name": "Join us",
      "settings": [
        {
          "type": "color",
          "id": "bk_color",
          "label": "Background Color",
          "default": "#004289"
        },
        {
          "type": "richtext",
          "id": "join_heading_text",
          "label": "Head Text",
          "default": "<p>join our Newsletter</p>"
        },
        {
          "type": "text",
          "id": "join_body_text",
          "label": "Body Text",
          "default": "Be the first to know about Our offers, events, new arrivals & sales."
        },
        {
          "type": "text",
          "id": "btn_text",
          "label": "Button Text",
          "default": "Sign Up"
        },
        {
          "type": "color",
          "id": "btn_color",
          "label": "Button Color",
          "default": "#032C58"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom footer",
      "blocks": [
        {
          "type": "info"
        },
        {
          "type": "contact"
        },
        {
          "type": "join_us"
        }
      ]
    }
  ]
}
{% endschema %}
