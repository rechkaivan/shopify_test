{%- style -%}
  .row {
    display: flex;
    justify-content: space-between;
    padding: 0 0 50px 0;
  }
  .col-logo {
    flex: 20%;
    text-align: right;
    padding-right: 50px;
  }
  .col-info {
    flex: 20%;
  }
  .col-contact {
    flex: 20%;
  }
  .col-join_us {
    flex: 10%;
  }
  .col-head {
    font-size: 24px;
    font-weight: 700;
    color: #333;
  }
  .list {
    list-style: none;
    padding: 0;
  }
  .list-item {
    text-decoration: none;
    font-size: 16px;
    font-weight: 400;
    color: #333;
  }
  .group {
    display: flex;
    justify-content: space-between;
  }
  .group label {
    display: block;
  }
  .content {
    margin-right: 40px;
  }
  .content > p {
    margin: 0;
    font-size: 16px;
    font-weight: 700;
    color: #004289;
  }
  .contact-wrapper {
    margin: 10px 0;
  }
  .others {
    margin: 20px 0;
  }
  .others > P {
    margin: 0;
  }
  .footer__list-social {
    margin: 0;
  }
  .footer__list-social > li {
    background-color: #004289;
    margin-right: 10px;
  }
  .footer__list-social > li > a {
    padding: 0;
  }
  .news-letter {
    padding: 40px;
    background-color: #004289;
  }
  .form-header-text {
    font-size: 24px;
    font-weight: 700;
    color: white;
  }
  .form-body-text {
    color: #ccd1ce;
  }
  .white-edit {
    width: 100%;
    padding: 10px;
    border: none;
  }
  .submit-btn {
    width: 100%;
    padding: 15px 0;
    background-color: #032c58;
    border: none;
    cursor: pointer;
    text-transform: uppercase;
    font-size: 16px;
    color: white;
    font-weight: 700;
    margin-top: 10px;
  }
  .email-wrapper > label {
    color: white;
  }
  .policy {
    display: flex;
    justify-content: space-around;
    padding: 50px 150px;
    border-top: solid 1px #004289;
  }
  .links-wrapper > ul {
    display: flex;
    justify-content: space-around;
    list-style: none;
    margin: 0;
  }
  .links-wrapper > ul a {
    padding: 0 10px;
    text-decoration: none;
    font-size: 16px;
    color: #333;
    font-weight: 400;
  }
  .logo-img {
    display: block;
  }
  .social-group {
    text-align: left;
  }
{%- endstyle -%}

<div class="row">
  {%- liquid
    assign has_social_icons = true
    if settings.social_facebook_link == blank and settings.social_instagram_link == blank and settings.social_youtube_link == blank and settings.social_tiktok_link == blank and settings.social_twitter_link == blank and settings.social_pinterest_link == blank and settings.social_snapchat_link == blank and settings.social_tumblr_link == blank and settings.social_vimeo_link == blank
      assign has_social_icons = false
    endif
  -%}
  <div class="col col-logo">
    {%- if settings.logo != blank -%}
      {% comment %} <img src="{{ section.settings.image | image_url }}" class="img-logo" width="20" height="20"> {% endcomment %}
      {%- assign logo_alt = settings.logo.alt | default: shop.name | escape -%}
      {%- assign logo_height = settings.logo_width | divided_by: settings.logo.aspect_ratio -%}
      {% capture sizes %}(min-width: 750px) {{ settings.logo_width }}px, 50vw{% endcapture %}
      {% capture widths %}{{ settings.logo_width }}, {{ settings.logo_width | times: 1.5 | round }}, {{ settings.logo_width | times: 2 }}{% endcapture %}
      {{
        settings.logo
        | image_url: width: 600
        | image_tag:
          class: 'header__heading-logo',
          widths: widths,
          height: logo_height,
          width: settings.logo_width,
          alt: logo_alt,
          sizes: sizes,
          preload: true
      }}
    {%- endif -%}
  </div>
  {%- for block in section.blocks -%}
    {%- case block.type -%}
      {%- when 'info' -%}
        <div class="col col-{{ block.type }}">
          <h2 class="col-head">{{ block.settings.heading_text }}</h2>
          {%- if block.settings.menu != blank -%}
            <ul class="list">
              {%- for item in block.settings.menu.links -%}
                <li class="list-item">
                  <a href="{{ item.url }}" class="list-item">
                    {{ item.title }}
                  </a>
                </li>
              {%- endfor -%}
            </ul>
          {%- endif -%}
        </div>
      {%- when 'contact' -%}
        <div class="col col-{{ block.type }}">
          <h2 class="col-head">{{ block.settings.heading }}</h2>
          <div class="contact-wrapper">
            <div class="group">
              <div class="label">
                <label>Tel</label>
                <label>Email</label>
              </div>
              <div class="content">
                <p>{{ block.settings.tel }}</p>
                <p>{{ block.settings.email }}</p>
              </div>
            </div>
            <div class="others">
              <p>{{ block.settings.company_info }}</p>
              <p>{{ block.settings.name }}</p>
              <p>{{ block.settings.country }}</p>
            </div>
            <p>Follow us</p>
            <div class="social-group">
              {%- if block.settings.manage_social and has_social_icons -%}
                {%- render 'social-icons', class: 'footer__list-social' -%}
              {%- endif -%}
            </div>
          </div>
        </div>
      {%- when 'join_us' -%}
        <div class="col col-{{ block.type }}">
          <form class="news-letter">
            <div class="form-conayiner">
              <h2 class="form-header-text">{{ block.settings.join_heading_text }}</h2>
              <p class="form-body-text">{{ block.settings.join_body_text }}</p>
              <div class="email-wrapper">
                <label>Email Address</label>
                <input type="email" class="white-edit" row="3">
                <input type="submit" class="submit-btn" value="{{ block.settings.btn_text }}">
              </div>
            </div>
          </form>
        </div>
    {%- endcase -%}
  {%- endfor -%}
</div>
<div class="policy">
  <div class="links-wrapper">
    <ul>
      <li>
        <a href="{{ section.settings.policy_link }}">{{ section.settings.policy }}</a><span>|</span>
      </li>
      <li>
        <a href="{{ section.settings.cookies_link }}">{{ section.settings.cookies }}</a><span>|</span>
      </li>
      <li>
        <a href="{{ section.settings.text_link }}">{{ section.settings.text }}</a>
      </li>
    </ul>
  </div>
  {%- if section.settings.company_logo != blank -%}
    <img class="logo-img" src="{{ section.settings.company_logo | image_url: medium }}">
  {%- endif -%}
</div>
{% schema %}
