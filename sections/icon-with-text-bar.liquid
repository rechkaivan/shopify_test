{{ 'icon-with-text.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .text-wrapper {
    display: flex;
    margin: 2rem auto;
    justify-content: space-around;
  }

  .bar {
    background-color: {{ section.settings.bg_color }};
  }

  .custom-page-width {
    padding: 0;
  }
{%- endstyle -%}

<div class="bar {%- if section.settings.full__page_width == false -%} {{ ' page-width' }} {%- endif -%}">
  <div class="text-wrapper custom-page-width">
    <div class="icon-text">
      {% render 'icon-folder' %}
      <h3 class="inner-text">{{ section.settings.text_1 }}</h3>
    </div>
    <div class="icon-text">
      {% render 'icon-shipping' %}
      <h3 class="inner-text">{{ section.settings.text_2 }}</h3>
    </div>
    <div class="icon-text">
      {% render 'icon-marker' %}
      <h3 class="inner-text">{{ section.settings.text_3 }}</h3>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Icon with Text",
  "class": "section",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background",
      "default": "#004289"
    },
    {
      "type": "checkbox",
      "id": "full__page_width",
      "label": "Full Page Width",
      "default": false
    },
    {
      "type": "text",
      "id": "text_1",
      "label": "Text",
      "default": "28 day returns"
    },
    {
      "type": "text",
      "id": "text_2",
      "label": "Text",
      "default": "free delivery on orders over â‚¬40 "
    },
    {
      "type": "text",
      "id": "text_3",
      "label": "Text",
      "default": "In Business Since 1977"
    }
  ],
  "presets": [
    {
      "name": "icon-with-text"
    }
  ]
}
{% endschema %}
