{% style %}
  .article--head-title > p {
    margin: 0;
    text-transform: uppercase;
    font-size: 66px;
    color: #004289;
    font-weight: bold;
  }

  .article--head-title {
    margin-bottom: 0;
  }

  .article--head-subtitle > p {
    margin: 0;
    color: #004289;
    font-size: 20px;
    font-weight: bold;
    margin-bottom: 2.6rem;
  }

  .article--body-title {
    text-transform: uppercase;
    color: #004289;
    font-size: 36px;
    font-weight: bold;
  }

  .article--body-text {
    text-align: justify;
  }

  .article-width {
    width: 93%;
  }

  .article--head-text {
    line-height: 2.7rem;
    text-align: justify;
  }

  .article--body-head-img {
    width: 100%;
  }

  .article--head-subtitle > p {
    text-transform: capitalize;
  }

  .subimage-wraper {
    display: flex;
    justify-content: space-between;
  }

  .sub-image {
    width: 48%;
  }

  .article--body-head-image {
    width: 100%;
  }

  aside {
    flex: 47%;
    background-color: #f5f6f4;
  }

  article {
    width: 100%;
  }

  .aside-title {
    text-transform: uppercase;
    color: #004289;
    font-size: 30px;
    font-weight: bold;
  }

  .article-menu {
    list-style: none;
    padding: 0;
    line-height: 2.6rem;
  }

  .menu-item > a {
    text-decoration: none;
    color: #333;
    font-size: 16px;
    font-weight: bold;
  }

  .menu-item:hover > a {
    color: #004289;
  }

  .aside-container {
    padding: 2.5rem 6rem;
  }

  .article {
    padding-bottom: 16.3rem;
  }

  .hidden-aside {
    display: none;
  }
  /*
  @media screen and (min-width: 1400px) {
    .page-width: {
      width: var(--page-width);
    }
  } */

  @media screen and (max-width: 989px) {
    .aside-wrapper {
      display: block;
      position: absolute;
      width: 25px;
      right: 1rem;
      top: 13rem;
      cursor: pointer;
      z-index: 10;
    }

    .aside-wrapper::before {
      content: '';
      top: 0;
      left: 0;
      height: var(--height);
      width: 100%;
      display: block;
      position: fixed;
      background-color: rgba(0, 0, 0, 0.6);
    }

    .hidden-aside {
      display: none;
      position: fixed;
      height: 100%;
      width: 250px;
      top: 0;
      right: 0;
      z-index: 10;
      padding: 3rem;
      background: #fff;
      transition-duration: 0.3s;
    }

    .sidebar-bg {
      width: 100%;
      height: 100%;
    }

    aside {
      display: none;
    }
  }

  @media screen and (max-width: 749px) {
    .article--head-title > p {
      font-size: 35px;
    }

    .article--head-subtitle > p {
      font-size: 15px;
    }

    .article--body-title {
      font-size: 25px;
    }
  }
{% endstyle %}

<article class="article page-width">
  {%- for block in section.blocks -%}
    {%- case block.type -%}
      {%- when 'heading' -%}
        <article class="article-width">
          <h1 class="article--head-title">{{ block.settings.article_head_title }}</h1>
          <h3 class="article--head-subtitle">{{ block.settings.article_head_subtitle }}</h3>
          <p class="article--head-text">{{ block.settings.article_head_text }}</p>
        </article>
      {%- when 'body' -%}
        <article class="article-width">
          <h2 class="article--body-title">{{ block.settings.article_body_title }}</h2>
          {% if block.settings.article__body__head_img != blank %}
            <img class="article--body-head-img" src="{{ block.settings.article__body__head_img | image_url }}">
          {% endif %}
          <p class="article--body-text">{{ block.settings.article_body_text }}</p>
          <div class="subimage-wraper">
            {% if block.settings.article__body_img_1 != empty %}
              <img class="sub-image" src="{{ block.settings.article__body_img_1 | image_url }}">
            {% endif %}
            {% if block.settings.article__body_img_2 != empty %}
              <img class="sub-image" src="{{ block.settings.article__body_img_2 | image_url }}">
            {% endif %}
          </div>
        </article>
    {%- endcase -%}
  {%- endfor -%}
</article>
<div class="aside-wrapper" id="hidden_asidebar">
  {%- render 'icon-hamburger' -%}
</div>
<div class="sidebar-bg"></div>
<div class="hidden-aside">
  <ul class="article-menu">
    {%- for item in section.settings.content_menu.links -%}
      <li class="menu-item">
        <a href="{{ item.url }}">{{ item.title }}</a>
      </li>
    {%- endfor -%}
  </ul>
</div>
<aside>
  <div class="aside-container">
    <h1 class="aside-title">{{ section.settings.sidebar_title }}</h1>
    <ul class="article-menu">
      {%- for item in section.settings.content_menu.links -%}
        <li class="menu-item">
          <a href="{{ item.url }}">{{ item.title }}</a>
        </li>
      {%- endfor -%}
    </ul>
  </div>
</aside>
<script>
  document.getElementById('hidden_asidebar').addEventListener('click', function (event) {
    event.preventDefault();
    const hiddenAsideStyle = document.querySelector('.aside-wrapper').style;
    if (hiddenAsideStyle.getPropertyValue('--height') != '0%') {
      hiddenAsideStyle.setProperty('--height', '0%');
      document.getElementsByClassName('hidden-aside')[0].style.display = 'none';
    } else {
      hiddenAsideStyle.setProperty('--height', '100%');
      document.getElementsByClassName('hidden-aside')[0].style.display = 'block';
    }
  });
</script>
{% schema %}
{
  "name": "content-basic",
  "tag": "section",
  "class": "content-basic page-width",
  "settings": [
    {
      "type": "richtext",
      "id": "sidebar_title",
      "label": "Sidebar Title",
      "default": "<p>sidebar</p>"
    },
    {
      "type": "link_list",
      "id": "content_menu",
      "label": "Content Menu"
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "Contrent Heading",
      "limit": 1,
      "settings": [
        {
          "type": "richtext",
          "id": "article_head_title",
          "label": "Heading Text",
          "default": "<p>h1 basic content page</p>"
        },
        {
          "type": "richtext",
          "id": "article_head_subtitle",
          "label": "Subtitle Text",
          "default": "<p>This is a subtitle which typically goes under a headline</p>"
        },
        {
          "type": "text",
          "id": "article_head_text",
          "label": "Text",
          "default": "Sed posuere consectetur est at lobortis. Praesent commodo cursus magna, vel scelerisque nisl consectetur et. Aenean lacinia bibendum nulla sed consectetur. Maecenas sed diam eget risus varius blandit sit amet non magna. Vivamus sagittis lacus vel augue laoreet rutrum faucibus dolor auctor."
        }
      ]
    },
    {
      "type": "body",
      "name": "Content Body",
      "limit": 1,
      "settings": [
        {
          "type": "richtext",
          "id": "article_body_title",
          "label": "Title",
          "default": "<p>this is h2 headline</p>"
        },
        {
          "type": "image_picker",
          "id": "article__body__head_img",
          "label": "Head Image"
        },
        {
          "type": "text",
          "id": "article_body_text",
          "label": "Text",
          "default": "Cum sociis natoque penatibus et magnis dis parturient montes, nascetur ridiculus mus. Cras justo odio, dapibus ac facilisis in, egestas eget quam. Maecenas faucibus mollis interdum. Sed posuere consectetur est at lobortis."
        },
        {
          "type": "image_picker",
          "id": "article__body_img_1",
          "label": "Sub Image"
        },
        {
          "type": "image_picker",
          "id": "article__body_img_2",
          "label": "Sub Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Content Basic",
      "blocks": [
        {
          "type": "heading"
        },
        {
          "type": "body"
        }
      ]
    }
  ]
}
{% endschema %}
